{
  "name": "crumbelle-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "frontend/*",
    "backend/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@crumbelle/web",
    "build:web": "npm run build --workspace=@crumbelle/web",
    "start:web": "npm run start --workspace=@crumbelle/web",
    "dev:api": "npm run dev --workspace=@crumbelle/api"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.26",
    "gsap": "^3.14.2",
    "lenis": "^1.3.17",
    "tailwind-merge": "^3.4.0",
    "three": "^0.182.0"
  }
}
